<WidgetsExample>:
    cols: 2

    ToggleButton:
        text: "Off"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
        disabled:root.toggle_disabled

    Button: 
        text: "Count up"
        on_press: root.on_button_up()
        disabled: root.button_disabled

    Button: 
        text: "Count down"
        on_press: root.on_button_down()
       # disabled: root.button_disabled


    Label:
        text: root.my_text
        font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
        font_size: "80dp"
        color: 1, .5, 1, 1

    Switch:
        id: toggle
        size_hint: None, 1
        width: "100dp"
        on_active: root.on_switch_active(self)

    Slider:
        id: my_slider
        min: 0
        max: 100
        orientation: "vertical"
        # on_value: root.on_slider_value(self)
        disabled: not toggle.active
    BoxLayout:    
        Label:
            text: str(int(my_slider.value))
        ProgressBar:
            max:100
            min:0
            value: my_slider.value
    TextInput:
        id: my_text_input
        text: "hello"
        size_hint: None, 1
        width: "100dp"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: root.Text_Input

